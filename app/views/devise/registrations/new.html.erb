<div class='container'>
    <%= render 'devise/shared/error_messages', resource: resource %>
    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
      <div class='row my-5'>
        <div class='col-10 col-md-6 col-lg-5 col-xl-4 p-0 sign-up-in-form'>
          <div class='my-4 mx-auto text-center form-heading'>
            <h3><%= t '.new_register' %></h3>
            </div>
          <!--ユーザ名-->
          <div class='form-group text-center mt-4'>
            <%= f.label :name %><br>
            <%= f.text_field :name, autofocus: true %>
          </div>
          <!--メールアドレス-->
          <div class='form-group text-center'>
            <%= f.label :email %><br>
            <%= f.email_field :email, autofocus: true%>
          </div>
          <!--パスワード-->
          <div class='form-group text-center'>
            <%= f.label :password %>
            <br />
            <%= f.password_field :password, autofocus: true, autocomplete: 'new-password' %>
          </div>
          <!--パスワード（確認用）-->
          <div class='form-group text-center'>
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autofocus: true %>
          </div>
          <!--登録ボタン-->
          <div class='text-center mt-4'>
            <%= f.submit t('.sign_up'), class: 'btn btn-info' %>
          </div>
          <!--ログイン画面リンク-->
          <div class='text-center my-5'>
            <%= link_to (t '.sign_in_link'), new_user_session_path %>
          </div>
        </div>
      </div>
    <% end %>

</div>
