<div class='container'>
    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
      <%= render 'devise/shared/error_messages', resource: resource %>

      <div class='row'>
        <div class='sign-up-in-form mx-auto'>
          <div class='sign-up-in-title my-4 mx-auto text-center h3'>Sign Up</div>

          <div class='form-group text-center mt-4'>
            <%= f.label :name %><br>
            <%= f.text_field :name, autofocus: true %>
          </div>

          <div class='form-group text-center'>
            <%= f.label :email %><br>
            <%= f.email_field :email, autofocus: true%>
          </div>

          <div class='form-group text-center'>
            <%= f.label :password %>
            <br />
            <%= f.password_field :password, autofocus: true, autocomplete: 'new-password' %>
          </div>

          <div class='form-group text-center'>
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autofocus: true %>
          </div>

          <div class='actions text-center mt-4'>
            <%= f.submit t('.sign_up'), class:'btn btn-info' %>
          </div>
          <div class='text-center my-5'>
            <%= link_to 'アカウントをお持ちの方はこちら', new_user_session_path %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
