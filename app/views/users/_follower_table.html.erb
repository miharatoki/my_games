<div class='col-12 text-center user-name'>
  <h2><%= user.name %></h3>
</div>
<div class='col-11 col-md-8 px-0 mx-auto tab-container follow-list'>
  <ul class='col-12 mb-0 px-0 form-inline tab-list'>
    <li class='col-6 d-flex align-items-center justify-content-center px-0 tab tab-active'><%= t '.following' %></li>
    <li class='col-6 d-flex align-items-center justify-content-center px-0 tab'><%= t '.follower' %></li>
  </ul>
  <div class='tabbox-contents'>
    <table class='table tabbox'>
      <tbody class=''>
        <% user.followings.each do |following_user| %>
          <tr>
            <td class='col-2 text-center'>
              <%= attachment_image_tag following_user, :profile_image, format: 'jpeg', fallback: 'no_image.jpg', size: '50x50' %>
            </td>
            <td class='col-5 col-md-7 py-0'>
              <div class='text-left'>
                <%= link_to following_user.name, user_path(following_user.id) %>
              </div>
              <div class='my-2 introduction-field'>
                <% if following_user.introduction.empty? %>
                <% else %>
                  <%= following_user.introduction %>
                <% end %>
              </div>
            </td>
            <td class='col-5 col-md-3 text-center align-middle'>
              <div class='follow-btn'>
                <% if current_user.following?(following_user) %>
                  <%= link_to user_unfollow_path(following_user.id) do %>
                    <span class='nomal'><%= t '.following' %></span>
                    <span class='hover'><%= "フォロー解除" %></span>
                  <% end %>
                <% else %>
                  <%= link_to user_follow_path(following_user.id) do %>
                    <span class='follow'><%= t '.follow' %></span>
                  <% end %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <table class='table tabbox tabbox-hidden'>
      <tbody>
        <% user.followers.each do |follower_user| %>
         <tr>
            <td class='col-2 text-center'>
              <%= attachment_image_tag follower_user, :profile_image, format: 'jpeg', fallback: 'no_image.jpg', size: '50x50' %>
            </td>
            <td class='col-5 col-md-7 py-0'>
              <div class='text-left'>
                <%= link_to follower_user.name, user_path(follower_user.id) %>
              </div>
              <div class='my-2 introduction-field'>
                 <% if follower_user.introduction.nil? %>
                   <span class='nil'><%= t '.nil' %></span>
                <% else %>
                  <%= follower_user.introduction %>
                <% end %>
              </div>
            </td>
            <td class='col-5 col-md-3 text-center align-middle'>
              <div class='follow-btn'>
                <% if current_user.following?(follower_user) %>
                  <%= link_to user_unfollow_path(follower_user.id) do %>
                    <span class='nomal'><%= t '.following' %></span>
                    <span class='hover'><%= t '.unfollow' %></span>
                  <% end %>
                <% else %>
                  <%= link_to user_follow_path(follower_user.id) do %>
                    <span class='follow'><%= t '.follow' %></span>
                  <% end %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<script>
  $(document).on ("turbolinks:load", function(){
    $('.tab').click(function(){
      $('.tab-active').removeClass('tab-active');
      $(this).addClass('tab-active');
      $('.tabbox-hidden').removeClass('tabbox-hidden');
      const index = $(this).index();
      $('.tabbox').eq(index-1).addClass('tabbox-hidden');
      $('.tabbox').eq(index+1).addClass('tabbox-hidden');
    });
  });
</script>