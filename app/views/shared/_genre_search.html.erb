<!--ジャンル検索結果がひとつもなかった場合-->
<% if posts.empty? %>
  <div class='row mt-3 mb-5'>
    <h2 class='col-12 text-center search-name'><%= t '.genre_name', genre_name: @genre.name %></h3>
  </div>
  <div class='row no-posts-row d-flex align-items-center justify-content-center'>
    <div class='col-lg-12 col-md-12 col-12 text-center my-3 h3 no-posts'>
      <%= t '.search_no_posts' %><br><br>
    </div>
  </div>
<% else %>
  <div class='row mt-3 mb-5'>
    <h2 class='col-12 text-center search-name'><%= t '.genre_name', genre_name: @genre.name %></h3>
    <%= render 'posts/index', posts: posts %>
  </div>
<% end %>