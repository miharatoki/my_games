<div class='container posts-index'>
  <div class='row mb-3'>
    <div class='col-12 col-sm-9 mt-3  text-center'>
      <h1 class='col-12 col-sm-7 offset-sm-4 page-heading'><%= t '.page_heading' %></h1>
    </div>
    <div class='col-7 offset-5 col-sm-3 offset-sm-0 my-2 sort-serach'>
      <%= render 'shared/sort_search', user: @user %>
    </div>
  </div>

  <% if params[:action] == 'index' %>
    <div class='row mt-3 mb-5'>
      <%= render 'posts/index', posts: @posts %>
    </div>
  <% elsif params[:action] == 'genre_search' %>
   <%= render 'shared/genre_search', posts: @posts %>
  <% elsif params[:action] == 'title_search' %>
   <%= render 'shared/title_search', posts: @posts %>
  <% end %>
</div>