<div class='container posts-edit'>
  <%= render 'shared/error', model: @post %>
  <%= form_with model: @post, local: true do |f| %>
    <div class='row my-5'>
      <div class='col-11 col-md-8 col-lg-6 col-xl-5 p-0 input-form'>
        <!--見出し-->
        <h3 class='my-4 mx-auto text-center form-heading'><%= t '.heading'%></h3>

        <!--ゲームタイトル-->
        <div class='col-9 mx-5 mt-5 mb-4 p-0'>
          <%= f.label :title %><br>
          <%= f.text_field :title, placeholder: (t '.title_word_count'), class: 'col-10 col-sm-8 col-xl-12 p-1' %>
        </div>

        <!--ジャンル-->
        <div class='mx-5 mb-4'>
          <%= f.label :genre %><br>
          <!--genre_arrayはヘルパーで定義-->
          <%= f.select :genre_id, genre_array, { include_blank: ( t '.genre_select') } %>
        </div>

        <!--感想-->
        <div class='col-10 col-xl-12 mx-5 p-0 mb-4'>
          <%= f.label :body %><br>
          <%= f.text_area :body, placeholder: (t '.body_word_count'), class: 'col-10 col-xl-9 p-1 impressin-field' %>
        </div>

        <!--評価-->
        <div class='col-9 mx-5 mb-4 p-0'>
          <p class='mb-2'><%= t '.score' %></p>
          <%= render 'posts/score_edit', post: @post %>
        </div>

        <!--ボタン-->
        <div class='d-flex justify-content-center mb-4'>
          <%= link_to post_path(@post.id), class: 'col-3 mr-3 btn btn-light' do %>
            <%= t ('.cancel') %>
          <% end %>
          <%= f.submit (t '.edit'), class: 'text-center btn btn-success' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
